<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/message_row_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_large">

    <TextView
        android:id="@+id/message_textview"
        style="@style/black_chat_message_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_left_rounded"
        android:paddingBottom="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:paddingTop="@dimen/margin_large"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_large"
        tools:text="[MESSAGE]"/>

    <TextView
        android:layout_below="@id/message_textview"
        android:id="@+id/message_author_textview"
        style="@style/orange_chat_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_extra_small"
        tools:text="[SENDER - TIME]"/>

</RelativeLayout>