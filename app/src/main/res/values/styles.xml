<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="colorPrimary">@color/ora_black</item>-->
        <!--<item name="colorPrimaryDark">@color/ora_black</item>-->
        <!--<item name="colorAccent">@color/ora_orange</item>-->
    </style>


    <style name="orange_menu_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/ora_orange</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="orange_tab_text" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/ora_orange</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="grey_tab_text" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/ora_dark_grey</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="black_bold_menu_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/ora_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="black_label_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/ora_black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ora_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/ora_black</item>
        <item name="android:textColorHint">@color/ora_grey_text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
